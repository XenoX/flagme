{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container h-100">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <h1>Add a flag</h1>
        {{ form_start(form) }}
            <div style="width:20%" >
                {{ form_widget(form.value) }}
            </div>
            <br>
            <button type="submit" class="btn btn-dark">Add</button>
        {{ form_end(form) }}
        <h1>Ranking</h1>
        <table class="table table-bordered table-striped table-hover text-center">
            <thead>
                <tr>
                    <td>Username</td>
                    <td>Number of flags</td>
                    <td>Progress</td>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <div>
                            <td>
                                <a class="link-dark" href="">{{ user.username }}</a>
                            </td>
                            <td style="width: 15%">
                                {{ user.userFlags|length }}/{{ flags|length }}
                            </td>
                            <td style="width: 40%">
                                <div class="progress">
                                    <div class="progress-bar bg-dark" role="progressbar" aria-valuenow="{{ user.userFlags|length }}" aria-valuemin="0" aria-valuemax="{{ flags|length }}" style="width: {{ (user.userFlags|length * 100) / flags|length }}%"></div>
                                </div>
                            </td>
                        </div>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
